        <input type="text" id="admin-search" placeholder="Search admin tools..." class="w-full p-2 bg-gray-700 rounded text-gray-100 focus:outline-none focus:ring-2 focus:ring-purple-500">
    </div>

    <!-- Navigation -->
    <nav class="px-6">
        <ul class="space-y-2">
            <li>
                <a href="{{ path('admin') }}" class="flex items-center p-3 text-gray-300 hover:bg-gray-700 hover:text-purple-400 rounded-lg transition">
                    <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
