{% extends 'base.html.twig' %}
{% block body %}
  <div class="min-h-screen flex items-center justify-center bg-dark-space">
    <div class="text-center px-4">
      <!-- Title -->
      <h1 class="mb-6">Join Aviyon</h1>

      <!-- Tagline -->
      <p class="text-lg md:text-xl mb-8 text-cyber-gray">
        Enter the Web3 Cloud: Build, deploy, and host with ease.
      </p>

      <!-- Signup Form -->
      <form action="{{ path('signup') }}" method="post" class="max-w-md mx-auto">
        <div class="mb-4">
          <input type="text" name="username" placeholder="Username" class="w-full px-4 py-2 bg-dark-space border border-neon-blue text-cyber-gray rounded-lg focus:outline-none focus:border-neon-magenta" required>
        </div>
        <div class="mb-4">
          <input type="email" name="email" placeholder="Email" class="w-full px-4 py-2 bg-dark-space border border-neon-blue text-cyber-gray rounded-lg focus:outline-none focus:border-neon-magenta" required>
        </div>
        <div class="mb-6">
          <input type="password" name="password" placeholder="Password" class="w-full px-4 py-2 bg-dark-space border border-neon-blue text-cyber-gray rounded-lg focus:outline-none focus:border-neon-magenta" required>
        </div>
        <button type="submit" class="cta-button primary w-full animate-pulse-slow">Join Now</button>
      </form>

      <!-- Link to Login -->
      <p class="mt-4 text-cyber-gray">
        Already have an account? <a href="{{ path('login') }}" class="text-neon-blue hover:text-neon-magenta">Login</a>
      </p>
    </div>
  </div>
{% endblock %}
