<div class="bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-xl transition-all border border-purple-500/20 animate-fade-in" data-tilt data-tilt-max="10">
    <div class="flex items-center mb-6">
        <img src="{{ asset('images/users/' ~ author|lower|replace({' ': '_'}) ~ '.jpg')|default(asset('images/users/default.jpg')) }}" alt="{{ author }} Photo" class="w-12 h-12 rounded-full mr-4 border-2 border-indigo-500">
        <div>
            <p class="text-sm font-semibold text-indigo-500">{{ author }}</p>
            <p class="text-xs text-gray-400">{{ date }} | {{ location }}</p>
            <span class="text-xs bg-purple-500/20 text-purple-300 px-2 py-1 rounded-full">{{ category|capitalize }}</span>
        </div>
    </div>
    <h3 class="text-2xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-indigo-600 mb-4">{{ title }}</h3>
    <p class="text-gray-300 mb-6">{{ content|custom_truncate(150, true, '...') }}</p>
    {% if media == 'image' %}
        <img src="{{ mediaSrc }}" alt="Bulletin Media" class="w-full h-60 object-cover rounded-lg mb-6 transform hover:scale-105 transition">
    {% elseif media == 'video' %}
        <video controls class="w-full h-60 object-cover rounded-lg mb-6">
            <source src="{{ mediaSrc }}" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    {% endif %}
    <div class="flex justify-between items-center text-gray-400 mb-6">
        <div class="flex gap-4">
            <button class="like-btn flex items-center gap-2 hover:text-purple-500 transition">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                </svg>
                <span class="like-count">{{ likes }}</span>
            </button>
            <button class="comment-btn flex items-center gap-2 hover:text-indigo-500 transition">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-7 12h-2v-2h2v2zm0-4h-2V6h2v4z"/>
                </svg>
                <span class="comment-count">{{ comments }}</span>
            </button>
        </div>
        <button class="share-btn flex items-center gap-2 hover:text-purple-400 transition">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"/>
            </svg>
            Share
        </button>
    </div>
    <a href="{{ path('bulletin_post', {'id': bulletin_id}) }}" class="w-full bg-gradient-to-r from-purple-600 to-indigo-600 text-white px-6 py-3 rounded-lg text-center hover:from-purple-700 hover:to-indigo-700 transition transform hover:scale-105">Explore Post</a>
</div>
