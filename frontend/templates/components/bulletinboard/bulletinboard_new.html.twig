<div class="bg-gray-800 p-8 rounded-xl shadow-xl max-w-3xl w-full border border-purple-500/30">
    <h2 class="text-3xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-indigo-600 mb-6 animate-slide-up">Create a Kodoverse Bulletin</h2>
    <form id="bulletin-form" class="space-y-6">
        <div class="mb-4">
            <input type="text" id="bulletin-title" class="w-full p-4 bg-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 placeholder-gray-400" placeholder="Enter a captivating title..." required>
        </div>
        <div class="mb-4">
            <div id="bulletin-editor" contenteditable="true" class="w-full h-72 p-6 bg-gray-700 text-white rounded-lg border border-gray-600 focus:outline-none focus:ring-2 focus:ring-purple-500 overflow-y-auto" placeholder="Start typing your bulletin content..."></div>
        </div>
        <div class="flex justify-between items-center mb-6">
            <span id="bulletin-word-count" class="text-gray-400 animate-fade-in">0 words</span>
            <div class="flex gap-4">
                <button type="button" id="add-image-bulletin" class="p-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition transform hover:scale-105">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19 3H5a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2V5a2 2 0 00-2-2zm0 16H5V5h14v14zm-5-7l-3 3-2-2-3 3V7h8v5z"/>
                    </svg>
                </button>
                <button type="button" id="add-video-bulletin" class="p-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition transform hover:scale-105">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M21 3H3a2 2 0 00-2 2v14a2 2 0 002 2h18a2 2 0 002-2V5a2 2 0 00-2-2zm-9 13l-5-4 5-4v8zm2-2V7h5v10h-5z"/>
                    </svg>
                </button>
                <button type="button" id="ai-suggest-content" class="p-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition transform hover:scale-105">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2V7zm0 8h2v2h-2v-2z"/>
                    </svg>
                </button>
            </div>
        </div>
        <div class="flex justify-end gap-4">
            <button type="button" id="preview-bulletin" class="bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition transform hover:scale-105">Preview</button>
            <button type="submit" id="submit-bulletin" class="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition transform hover:scale-105">Post to Kodoverse</button>
        </div>
    </form>
    <div id="bulletin-status" class="hidden w-full bg-purple-600 text-white text-center py-3 rounded-lg mt-4 animate-fade-in" style="transition: opacity 0.5s ease;"></div>
    <div id="bulletin-preview" class="hidden mt-6 p-6 bg-gray-900 rounded-xl border border-purple-500/20">
        <h3 class="text-xl font-semibold text-indigo-500 mb-4 animate-slide-up">Preview</h3>
        <div id="preview-content" class="text-gray-200"></div>
    </div>
</div>
