<div class="bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-xl transition-all border border-purple-500/20 animate-fade-in" data-tilt data-tilt-max="10">
    <div class="flex items-center mb-6">
        <img src="{{ asset('images/users/' ~ organizer|lower|replace({' ': '_'}) ~ '.jpg')|default(asset('images/users/default.jpg')) }}" alt="{{ organizer }} Photo" class="w-12 h-12 rounded-full mr-4 border-2 border-indigo-500">
        <div>
            <p class="text-sm font-semibold text-indigo-500">{{ organizer }}</p>
            <p class="text-xs text-gray-400">{{ start_date }} | {{ location }}</p>
            <span class="text-xs bg-purple-500/20 text-purple-300 px-2 py-1 rounded-full">{{ category|capitalize }}</span>
            {% if is_live %}
                <span class="live-event ml-2"><span>Live</span></span>
            {% endif %}
        </div>
    </div>
    <h3 class="text-2xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-indigo-600 mb-4">{{ title }}</h3>
    <p class="text-gray-300 mb-6">{{ description|custom_truncate(150, true, '...') }}</p>
    {% if media == 'image' %}
        <img src="{{ mediaSrc }}" alt="Event Media" class="w-full h-60 object-cover rounded-lg mb-6 transform hover:scale-105 transition">
    {% elseif media == 'video' %}
        <video controls class="w-full h-60 object-cover rounded-lg mb-6">
            <source src="{{ mediaSrc }}" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    {% endif %}
    <div class="flex justify-between items-center text-gray-400 mb-6">
        <div class="flex gap-4">
            <button class="join-btn flex items-center gap-2 hover:text-purple-500 transition">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 14H8v-2h2v2zm0-4H8V8h2v2zm4 4h-2v-2h2v2zm0-4h-2V8h2v2z"/>
                </svg>
                <span>Join</span>
            </button>
            <button class="remind-btn flex items-center gap-2 hover:text-indigo-500 transition">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 16c-.55 0-1-.45-1-1s.45-1 1-1 1 .45 1 1-.45 1-1 1zm1-5h-2V7h2v6z"/>
                </svg>
                <span>Remind Me</span>
            </button>
        </div>
        <button class="share-btn flex items-center gap-2 hover:text-purple-400 transition">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"/>
            </svg>
            Share
        </button>
    </div>
    <a href="{{ path('calendar_event', {'id': event_id}) }}" class="w-full bg-gradient-to-r from-purple-600 to-indigo-600 text-white px-6 py-3 rounded-lg text-center hover:from-purple-700 hover:to-indigo-700 transition transform hover:scale-105">View Details</a>
</div>
