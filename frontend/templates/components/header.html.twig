<header class="bg-dark-light shadow-lg">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <!-- Logo -->
        <a href="{{ path('app_root') }}" class="text-2xl font-inter text-neon-purple">Aviyon</a>

        <!-- Navigation -->
        <nav class="hidden md:flex space-x-6">
            <a href="{{ path('dashboard') }}" class="text-gray-300 hover:text-neon-purple transition font-inter">Dashboard</a>
            <a href="{{ path('marketplace') }}" class="text-gray-300 hover:text-neon-purple transition font-inter">Marketplace</a>
            <a href="{{ path('investing') }}" class="text-gray-300 hover:text-neon-purple transition font-inter">Investing</a>
            <div class="relative group">
                <button class="text-gray-300 hover:text-neon-purple transition font-inter">More</button>
                <div class="absolute right-0 mt-2 w-48 bg-dark-light rounded-lg shadow-lg hidden group-hover:block z-10">
                    <div class="p-4">
                        <a href="{{ path('explore') }}" class="block text-gray-300 hover:text-neon-purple transition mb-2">Explore</a>
                        <a href="{{ path('notifications') }}" class="block text-gray-300 hover:text-neon-purple transition mb-2">Notifications</a>
                        <a href="{{ path('settings') }}" class="block text-gray-300 hover:text-neon-purple transition">Settings</a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- User Menu -->
        <div class="relative">
            <button id="user-menu-toggle" class="text-gray-300 hover:text-neon-purple transition">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
            </button>
            <div id="user-menu" class="absolute right-0 mt-2 w-48 bg-dark-light rounded-lg shadow-lg hidden z-10">
                <div class="p-4">
                    <a href="{{ path('user_profile', {'username': 'current_user'}) }}" class="block text-gray-300 hover:text-neon-purple transition mb-2">Profile</a>
                    <a href="{{ path('logout') }}" class="block text-gray-300 hover:text-neon-purple transition">Logout</a>
                </div>
            </div>
        </div>

        <!-- Mobile Menu Toggle -->
        <button id="mobile-menu-toggle" class="md:hidden text-gray-300 hover:text-neon-purple transition">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden hidden bg-dark-light p-4">
        <a href="{{ path('dashboard') }}" class="block text-gray-300 hover:text-neon-purple transition mb-2">Dashboard</a>
        <a href="{{ path('marketplace') }}" class="block text-gray-300 hover:text-neon-purple transition mb-2">Marketplace</a>
        <a href="{{ path('investing') }}" class="block text-gray-300 hover:text-neon-purple transition mb-2">Investing</a>
        <a href="{{ path('explore') }}" class="block text-gray-300 hover:text-neon-purple transition mb-2">Explore</a>
        <a href="{{ path('notifications') }}" class="block text-gray-300 hover:text-neon-purple transition mb-2">Notifications</a>
        <a href="{{ path('settings') }}" class="block text-gray-300 hover:text-neon-purple transition">Settings</a>
    </div>

    <!-- Ticker -->
    {% include 'components/ticker.html.twig' %}
</header>
