<script>
(function() {
    // Namespace for all Aviyon header functionality
    const AviyonHeader = {
        // Utility to safely get elements
        getElement: function(id) {
            try {
                const element = document.getElementById(id);
                if (!element) throw new Error(`Element with ID ${id} not found`);
                return element;
            } catch (e) {
                console.error('[AviyonHeader] Error:', e.message);
                return null;
            }
        },

        // Toggle dropdown visibility
        toggleDropdown: function(toggleId, dropdownId) {
            const toggle = this.getElement(toggleId);
            const dropdown = this.getElement(dropdownId);
            if (!toggle || !dropdown) return;

            toggle.addEventListener('click', (e) => {
                e.stopPropagation();
                dropdown.classList.toggle('hidden');
            });
        },

        // Initialize all dropdowns and functionality
        init: function() {
            const header = this.getElement('aviyon-header');
            if (!header) return;

            // Dropdowns: Menu, Cart, Messages, Notifications, User
            const dropdowns = [
                { toggle: 'aviyon-menu-toggle', dropdown: 'aviyon-menu-dropdown' },
                { toggle: 'aviyon-cart-toggle', dropdown: 'aviyon-cart-dropdown' },
                { toggle: 'aviyon-messages-toggle', dropdown: 'aviyon-messages-dropdown' },
                { toggle: 'aviyon-notifications-toggle', dropdown: 'aviyon-notifications-dropdown' },
                { toggle: 'aviyon-user-toggle', dropdown: 'aviyon-user-dropdown' }
            ];

            dropdowns.forEach(({ toggle, dropdown }) => this.toggleDropdown(toggle, dropdown));

            // Wallet Collapsible
            const walletToggle = this.getElement('wallet-toggle');
            const walletContent = this.getElement('wallet-content');
            const walletChevron = this.getElement('wallet-chevron');
            if (walletToggle && walletContent && walletChevron) {
                walletToggle.addEventListener('click', () => {
                    walletContent.classList.toggle('hidden');
                    walletChevron.classList.toggle('rotate-180');
                });
            }

            // Search Dropdown
            const searchBar = this.getElement('aviyon-search-bar');
            const searchDropdown = this.getElement('aviyon-search-dropdown');
            if (searchBar && searchDropdown) {
                searchBar.addEventListener('focus', () => searchDropdown.classList.remove('hidden'));
                searchBar.addEventListener('blur', () => setTimeout(() => searchDropdown.classList.add('hidden'), 100));
            }

            // Event Delegation for all header interactions
            header.addEventListener('click', (e) => {
                e.stopPropagation();
                const target = e.target;

                // Close all dropdowns if clicking outside
                dropdowns.forEach(({ toggle, dropdown }) => {
                    const toggleEl = this.getElement(toggle);
                    const dropdownEl = this.getElement(dropdown);
                    if (dropdownEl && !toggleEl?.contains(target) && !dropdownEl.contains(target)) {
                        dropdownEl.classList.add('hidden');
                    }
                });

                // Cart Interactions
                if (target.closest('.aviyon-quantity-increase')) {
                    const item = target.closest('.aviyon-cart-item');
                    const quantityEl = item.querySelector('.aviyon-quantity');
                    const priceEl = item.querySelector('.aviyon-price');
                    const basePrice = parseFloat(priceEl.textContent) / parseInt(quantityEl.textContent);
                    const count = parseInt(quantityEl.textContent) + 1;
                    quantityEl.textContent = count;
                    priceEl.textContent = `${(basePrice * count).toFixed(2)} AM`;
                    this.updateCartTotal();
                }

                if (target.closest('.aviyon-quantity-decrease')) {
                    const item = target.closest('.aviyon-cart-item');
                    const quantityEl = item.querySelector('.aviyon-quantity');
                    const priceEl = item.querySelector('.aviyon-price');
                    const count = parseInt(quantityEl.textContent);
                    if (count > 1) {
                        const basePrice = parseFloat(priceEl.textContent) / count;
                        quantityEl.textContent = count - 1;
                        priceEl.textContent = `${(basePrice * (count - 1)).toFixed(2)} AM`;
                        this.updateCartTotal();
                    }
                }

                if (target.closest('.aviyon-delete-item')) {
                    const item = target.closest('.aviyon-cart-item');
                    item.remove();
                    this.updateCartTotal();
                    const cartCount = this.getElement('aviyon-cart-count');
                    if (cartCount) {
                        cartCount.textContent = document.querySelectorAll('.aviyon-cart-item').length;
                    }
                }

                // Messages Interactions
                if (target.closest('.aviyon-message-item')) {
                    const messagesList = this.getElement('aviyon-messages-list');
                    const messageView = this.getElement('aviyon-message-view');
                    if (messagesList && messageView) {
                        messagesList.classList.add('hidden');
                        messageView.classList.remove('hidden');
                    }
                }

                if (target.closest('#aviyon-message-back')) {
                    const messagesList = this.getElement('aviyon-messages-list');
                    const messageView = this.getElement('aviyon-message-view');
                    if (messagesList && messageView) {
                        messagesList.classList.remove('hidden');
                        messageView.classList.add('hidden');
                    }
                }

                if (target.closest('.aviyon-delete-message')) {
                    e.stopPropagation();
                    const messageItem = target.closest('.aviyon-message-item');
                    messageItem.remove();
                }

                // Notifications Interactions
                if (target.closest('.aviyon-notification-item')) {
                    const notificationsList = this.getElement('aviyon-notifications-list');
                    const notificationView = this.getElement('aviyon-notification-view');
                    if (notificationsList && notificationView) {
                        notificationsList.classList.add('hidden');
                        notificationView.classList.remove('hidden');
                    }
                }

                if (target.closest('#aviyon-notification-back')) {
                    const notificationsList = this.getElement('aviyon-notifications-list');
                    const notificationView = this.getElement('aviyon-notification-view');
                    if (notificationsList && notificationView) {
                        notificationsList.classList.remove('hidden');
                        notificationView.classList.add('hidden');
                    }
                }

                if (target.closest('.aviyon-delete-notification')) {
                    e.stopPropagation();
                    const notificationItem = target.closest('.aviyon-notification-item');
                    notificationItem.remove();
                }

                // Ticker Controls
                if (target.closest('#aviyon-toggle-ticker')) {
                    const ticker = this.getElement('aviyon-ticker-container');
                    if (ticker) ticker.classList.toggle('hidden');
                }

                if (target.closest('#aviyon-ticker-prefs')) {
                    const modal = this.getElement('aviyon-ticker-prefs-modal');
                    if (modal) modal.classList.remove('hidden');
                }

                if (target.closest('#aviyon-ticker-prefs-close')) {
                    const modal = this.getElement('aviyon-ticker-prefs-modal');
                    if (modal) modal.classList.add('hidden');
                }
            });

            // Theme Toggle
            const themeToggle = this.getElement('aviyon-theme-toggle');
            if (themeToggle) {
                themeToggle.addEventListener('change', (e) => {
                    const theme = e.target.value;
                    document.documentElement.classList.remove('dark', 'light', 'earth');
                    document.documentElement.classList.add(theme);
                });
            }
        },

        // Update Cart Total
        updateCartTotal: function() {
            try {
                const prices = Array.from(document.querySelectorAll('.aviyon-price')).map(p => parseFloat(p.textContent) || 0);
                const total = prices.reduce((sum, price) => sum + price, 0);
                const cartTotal = this.getElement('aviyon-cart-total');
                if (cartTotal) cartTotal.textContent = `${total.toFixed(2)} AM`;
            } catch (e) {
                console.error('[AviyonHeader] Error updating cart total:', e.message);
            }
        }
    };

    // Initialize when DOM is ready
    document.addEventListener('DOMContentLoaded', () => {
        AviyonHeader.init();
    });
})();
</script>
