<script>
(function() {
    const Cart = {
        getElement: function(id) {
            try {
                const element = document.getElementById(id);
                if (!element) throw new Error(`Element with ID ${id} not found`);
                return element;
            } catch (e) {
                console.error('[Cart] Error:', e.message);
                return null;
            }
        },

        toggleDropdown: function(toggleId, dropdownId) {
            const toggle = this.getElement(toggleId);
            const dropdown = this.getElement(dropdownId);
            if (!toggle || !dropdown) return;

            toggle.addEventListener('click', (e) => {
                e.stopPropagation();
                dropdown.classList.toggle('hidden');
            });
        },

        updateCartTotal: function() {
            try {
                const prices = Array.from(document.querySelectorAll('.aviyon-price')).map(p => parseFloat(p.textContent) || 0);
                const total = prices.reduce((sum, price) => sum + price, 0);
                const cartTotal = this.getElement('aviyon-cart-total');
                if (cartTotal) cartTotal.textContent = `${total.toFixed(2)} AM`;
            } catch (e) {
                console.error('[Cart] Error updating cart total:', e.message);
            }
        },

        init: function() {
            this.toggleDropdown('aviyon-cart-toggle', 'aviyon-cart-dropdown');

            document.addEventListener('click', (e) => {
                const cartDropdown = this.getElement('aviyon-cart-dropdown');
                const cartToggle = this.getElement('aviyon-cart-toggle');
                if (cartDropdown && cartToggle && !cartToggle.contains(e.target) && !cartDropdown.contains(e.target)) {
                    cartDropdown.classList.add('hidden');
                }

                const target = e.target;
                if (target.closest('.aviyon-quantity-increase')) {
                    const item = target.closest('.aviyon-cart-item');
                    const quantityEl = item.querySelector('.aviyon-quantity');
                    const priceEl = item.querySelector('.aviyon-price');
                    const basePrice = parseFloat(priceEl.textContent) / parseInt(quantityEl.textContent);
                    const count = parseInt(quantityEl.textContent) + 1;
                    quantityEl.textContent = count;
                    priceEl.textContent = `${(basePrice * count).toFixed(2)} AM`;
                    this.updateCartTotal();
                }

                if (target.closest('.aviyon-quantity-decrease')) {
                    const item = target.closest('.aviyon-cart-item');
                    const quantityEl = item.querySelector('.aviyon-quantity');
                    const priceEl = item.querySelector('.aviyon-price');
                    const count = parseInt(quantityEl.textContent);
                    if (count > 1) {
                        const basePrice = parseFloat(priceEl.textContent) / count;
                        quantityEl.textContent = count - 1;
                        priceEl.textContent = `${(basePrice * (count - 1)).toFixed(2)} AM`;
                        this.updateCartTotal();
                    }
                }

                if (target.closest('.aviyon-delete-item')) {
                    const item = target.closest('.aviyon-cart-item');
                    item.remove();
                    this.updateCartTotal();
                    const cartCount = this.getElement('aviyon-cart-count');
                    if (cartCount) {
                        cartCount.textContent = document.querySelectorAll('.aviyon-cart-item').length;
                    }
                }
            });
        }
    };

    document.addEventListener('DOMContentLoaded', () => {
        Cart.init();
    });
})();
</script>
