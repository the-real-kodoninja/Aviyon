<script>
(function() {
    const User = {
        getElement: function(id) {
            try {
                const element = document.getElementById(id);
                if (!element) throw new Error(`Element with ID ${id} not found`);
                return element;
            } catch (e) {
                console.error('[User] Error:', e.message);
                return null;
            }
        },

        toggleDropdown: function(toggleId, dropdownId) {
            const toggle = this.getElement(toggleId);
            const dropdown = this.getElement(dropdownId);
            if (!toggle || !dropdown) return;

            toggle.addEventListener('click', (e) => {
                e.stopPropagation();
                dropdown.classList.toggle('hidden');
            });
        },

        init: function() {
            this.toggleDropdown('aviyon-user-toggle', 'aviyon-user-dropdown');

            const walletToggle = this.getElement('wallet-toggle');
            const walletContent = this.getElement('wallet-content');
            const walletChevron = this.getElement('wallet-chevron');
            if (walletToggle && walletContent && walletChevron) {
                walletToggle.addEventListener('click', () => {
                    walletContent.classList.toggle('hidden');
                    walletChevron.classList.toggle('rotate-180');
                });
            }

            document.addEventListener('click', (e) => {
                const userDropdown = this.getElement('aviyon-user-dropdown');
                const userToggle = this.getElement('aviyon-user-toggle');
                if (userDropdown && userToggle && !userToggle.contains(e.target) && !userDropdown.contains(e.target)) {
                    userDropdown.classList.add('hidden');
                }
            });
        }
    };

    document.addEventListener('DOMContentLoaded', () => {
        User.init();
    });
})();
</script>
