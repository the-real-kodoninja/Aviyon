<!-- Sectors -->
    <section class="py-20 px-6 md:px-12 bg-gray-800 z-10">
        <div class="container mx-auto">
            <h2 class="text-4xl md:text-5xl font-bold text-center text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-indigo-600 mb-12 animate-slide-up">Our Sectors</h2>
