                {% set sectors = [
                    { 'title': 'Software Development', 'description': 'Building cutting-edge software solutions for global industries.' },
                    { 'title': 'Social Media', 'description': 'Innovating social platforms with DeFi integration.' },
                    { 'title': 'DeFi (Web3-5)', 'description': 'Leading the future of decentralized finance.' },
                    { 'title': 'AI', 'description': 'Harnessing AI for smarter solutions.' },
                    { 'title': 'Crypto', 'description': 'Driving innovation in cryptocurrency markets.' },
                    { 'title': 'NFT', 'description': 'Pioneering the NFT ecosystem.' },
                    { 'title': 'Cloud Crypto Mining', 'description': 'Scalable cloud-based crypto mining solutions.' },
                    { 'title': 'Crypto Mining', 'description': 'Efficient and sustainable crypto mining operations.' },
                    { 'title': 'Business', 'description': 'Strategic business solutions for global markets.' },
                    { 'title': 'Investing', 'description': 'Expert investment strategies with Stoploss & Whale.' },
                    { 'title': 'Trading', 'description': 'Advanced trading platforms for all markets.' },
                    { 'title': 'Gaming', 'description': 'Immersive gaming experiences with blockchain integration.' },
                    { 'title': 'Electronics', 'description': 'Innovative electronics for the modern world.' },
                    { 'title': 'Film', 'description': 'Producing blockbuster films with cutting-edge tech.' },
                    { 'title': 'Fitness', 'description': 'Tech-driven fitness solutions for all.' },
                    { 'title': 'Protocol & Biohacking', 'description': 'Advancing human potential through science.' },
                    { 'title': 'Fashion & Talent', 'description': 'Redefining fashion and talent discovery.' },
                    { 'title': 'Business & STEM', 'description': 'Investing in the future of business and STEM innovation.' }
                ] %}
                {% for sector in sectors %}
                    <div class="bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-xl transition transform hover:-translate-y-2 animate-fade-in border border-purple-500/30 flex items-start">
                        <svg class="w-8 h-8 text-indigo-600 mr-3" fill="currentColor" viewBox="0 0 24 24">
