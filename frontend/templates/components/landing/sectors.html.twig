                        <div>
                            <h3 class="text-xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-indigo-600 mb-2">{{ sector.title }}</h3>
                            <p class="text-gray-200">{{ sector.description }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
