                </svg>
                <span>{{ project.stars|default(0) }}</span>
            </div>
        </div>
        <a href="{{ path('project_view', {'id': project.id}) }}" class="text-gray-400 post-interaction hover:text-purple-400">Inspect</a>
    </div>
</div>
