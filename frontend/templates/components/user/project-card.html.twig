<div class="bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-xl transition neon-glow">
    <div class="flex items-center mb-4">
        <img src="{{ asset('build/images/users/' ~ app.user.username ~ '.jpg') }}" alt="User Photo" class="w-8 h-8 rounded-full mr-2">
        <div>
            <p class="text-sm text-purple-400">{{ app.user.username }}</p>
            <p class="text-xs text-gray-400">1 hour ago</p>
        </div>
    </div>
    <h3 class="text-xl text-purple-400 mb-2">{{ project.name }}</h3>
    <p class="text-gray-300 mb-4">{{ project.description }}</p>
    <div class="flex justify-between items-center">
        <div class="flex space-x-4">
            <div class="flex items-center text-gray-400 post-interaction">
                <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 24 24">
