<div class="bg-gray-800/50 backdrop-blur-md border border-gray-700/50 rounded-lg p-4 h-full">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl text-purple-400">Contacts</h2>
        <div class="flex space-x-2">
            <input type="text" id="search-messages" placeholder="Search Messages" class="p-2 bg-gray-700 rounded text-gray-100 focus:outline-none focus:ring-2 focus:ring-purple-500 w-48">
            <button id="settings-btn" class="text-gray-400 hover:text-purple-400">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
            </button>
            <button id="extras-btn" class="text-gray-400 hover:text-purple-400" onclick="showExtras()">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M12 4v16m8-8H4"/>
                </svg>
            </button>
        </div>
    </div>
    <div id="message-list" class="space-y-2 overflow-y-auto h-full">
        {% for contact in ['Nimbus AI', 'User1', 'User2'] %}
            <div class="message-item flex justify-between items-center p-2 bg-gray-700/50 rounded hover:bg-purple-600/50 transition cursor-pointer" data-contact="{{ contact }}">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-gray-600 rounded-full flex items-center justify-center mr-3 text-white font-bold">{{ contact|slice(0,1) }}</div>
                    <div>
                        <div class="text-white font-medium">{{ contact }}</div>
                        <div class="text-gray-400 text-sm">Snippet of message...</div>
                    </div>
                </div>
                <div class="flex items-center space-x-2">
                    <span class="text-gray-500 text-xs">2h ago</span>
                    {% if loop.index == 1 %}
                        <span class="w-3 h-3 bg-purple-500 rounded-full animate-pulse"></span>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
