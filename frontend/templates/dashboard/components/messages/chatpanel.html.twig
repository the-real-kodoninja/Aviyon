<div class="bg-gray-800/50 backdrop-blur-md border border-gray-700/50 rounded-lg p-4 h-full">
    <div class="flex justify-between items-center mb-4">
        <div class="relative w-full">
            <input type="text" id="search-messages" placeholder="@user or search messages" class="p-2 bg-gray-700 rounded text-gray-100 focus:outline-none focus:ring-2 focus:ring-purple-500 w-full pr-10" autocomplete="off">
            <div id="autocomplete-dropdown" class="absolute z-10 w-full bg-gray-800 border border-gray-700 rounded-lg mt-1 hidden shadow-lg">
                <!-- Autocomplete items will be populated here -->
            </div>
            <div id="send-icon" class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400 hidden">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M5 13l4 4L19 7"/>
                </svg>
            </div>
        </div>
        <div class="relative">
            <button id="settings-btn" class="text-gray-400 hover:text-purple-400 ml-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
            </button>
            <div id="settings-dropdown" class="absolute right-0 mt-2 w-36 bg-gray-800 border border-gray-700 rounded-lg hidden shadow-lg">
                <a href="#" class="block px-4 py-2 text-gray-300 hover:bg-purple-600/50" onclick="showExtras()">Extras</a>
                <a href="#" class="block px-4 py-2 text-gray-300 hover:bg-purple-600/50" onclick="clearMessages()">Clear all</a>
            </div>
        </div>
    </div>
    <div id="message-list" class="space-y-2 overflow-y-auto h-full">
        {% for contact in ['Nimbus AI', 'User1', 'User2'] %}
            <div class="message-item flex justify-between items-center p-2 bg-gray-700/50 rounded hover:bg-purple-600/50 transition cursor-pointer relative" data-contact="{{ contact }}">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-gray-600 rounded-full flex items-center justify-center mr-3 text-white font-bold">{{ contact|slice(0,1) }}</div>
                    <div>
                        <div class="text-white font-medium">{{ contact }}</div>
                        <div class="text-gray-400 text-sm">Snippet of message...</div>
                    </div>
                </div>
                <div class="flex items-center space-x-2">
                    <span class="text-gray-500 text-xs">2h ago</span>
                    {% if loop.index == 1 %}
                        <span class="w-3 h-3 bg-purple-500 rounded-full animate-pulse"></span>
                    {% endif %}
                </div>
                <div id="tooltip-{{ loop.index }}" class="absolute hidden bg-gray-700 text-white p-2 rounded-lg shadow-lg z-10 w-48">
                    <p><strong>Name:</strong> {{ contact }}</p>
                    <p><strong>Last Active:</strong> 5m ago</p>
                    <p><strong>Status:</strong> Online</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
