{% extends 'layouts/base.html.twig' %}

{% block title %}Aviyon - Deployments{% endblock %}

{% block body %}
    <!-- Deployments Header -->
    <section class="py-12">
        <h1 class="text-4xl font-bold text-purple-400 mb-4">Deployments</h1>
        <p class="text-xl text-gray-300 mb-8">Manage your application deployments on the Internet Computer.</p>
    </section>

    <!-- New Deployment -->
    <section class="py-12">
        <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
            <h2 class="text-2xl text-purple-400 mb-4">New Deployment</h2>
            <form action="{{ path('deploy_app') }}" method="POST">
                <div class="grid gap-4 md:grid-cols-2">
                    <div>
                        <label for="app_name" class="block text-gray-300 mb-2">Application Name</label>
                        <input type="text" id="app_name" name="app_name" class="w-full p-2 bg-gray-700 rounded text-gray-100 focus:outline-none focus:ring-2 focus:ring-purple-500" required>
                    </div>
                    <div>
                        <label for="repo_url" class="block text-gray-300 mb-2">Repository URL</label>
                        <input type="url" id="repo_url" name="repo_url" class="w-full p-2 bg-gray-700 rounded text-gray-100 focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="https://github.com/username/repo" required>
                    </div>
                </div>
                <button type="submit" class="mt-4 bg-purple-500 text-white px-6 py-2 rounded-lg hover:bg-purple-600 transition">Deploy Now</button>
            </form>
        </div>
    </section>

    <!-- Deployment List -->
    <section class="py-12">
        <h2 class="text-3xl font-semibold text-purple-400 mb-6">Your Deployments</h2>
        <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
            <div class="overflow-x-auto">
                <table class="w-full text-gray-300">
                    <thead>
                        <tr class="border-b border-gray-700">
                            <th class="p-3 text-left">Application</th>
                            <th class="p-3 text-left">Status</th>
                            <th class="p-3 text-left">Last Updated</th>
                            <th class="p-3 text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for deployment in deployments %}
                            <tr class="border-b border-gray-700">
                                <td class="p-3">{{ deployment.app_name }}</td>
                                <td class="p-3">
                                    <span class="px-2 py-1 rounded {{ deployment.status == 'running' ? 'bg-green-500' : (deployment.status == 'failed' ? 'bg-red-500' : 'bg-yellow-500') }} text-white text-sm">
                                        {{ deployment.status|capitalize }}
                                    </span>
                                </td>
                                <td class="p-3">{{ deployment.last_updated|date('Y-m-d H:i:s') }}</td>
                                <td class="p-3 flex space-x-2">
                                    <a href="{{ path('deployment_logs', {'id': deployment.id}) }}" class="text-purple-400 hover:underline">View Logs</a>
                                    <form action="{{ path('deployment_restart') }}" method="POST">
                                        <input type="hidden" name="deployment_id" value="{{ deployment.id }}">
                                        <button type="submit" class="text-blue-400 hover:underline">Restart</button>
                                    </form>
                                    <form action="{{ path('deployment_delete') }}" method="POST">
                                        <input type="hidden" name="deployment_id" value="{{ deployment.id }}">
                                        <button type="submit" class="text-red-400 hover:underline" onclick="return confirm('Are you sure you want to delete this deployment?')">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}
