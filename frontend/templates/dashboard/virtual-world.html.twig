{% extends 'layouts/base.html.twig' %}

{% block title %}Aviyon - Virtual World{% endblock %}

{% block body %}
    <!-- Virtual World Header -->
    <section class="py-12">
        <h1 class="text-4xl font-bold text-purple-400 mb-4">Kodoverse Virtual World</h1>
        <p class="text-xl text-gray-300 mb-8">Collaborate, showcase projects, and connect with creators in our immersive virtual world.</p>
    </section>

    <!-- World Preview -->
    <section class="py-12">
        <div class="bg-gray-800 p-6 rounded-lg shadow-lg text-center">
            <h2 class="text-2xl text-purple-400 mb-4">Enter the Kodoverse</h2>
            <div class="relative h-64 bg-gray-900 rounded-lg overflow-hidden">
                <!-- Placeholder for 3D World Preview -->
                <div class="absolute inset-0 flex items-center justify-center">
                    <p class="text-gray-300">3D World Preview (Integration Coming Soon)</p>
                </div>
            </div>
            <a href="{{ path('virtual_world_enter') }}" class="mt-4 inline-block bg-purple-500 text-white px-6 py-2 rounded-lg hover:bg-purple-600 transition">Enter Now</a>
        </div>
    </section>

    <!-- Collaboration Tools -->
    <section class="py-12">
        <h2 class="text-3xl font-semibold text-purple-400 mb-6">Collaboration Tools</h2>
        <div class="grid gap-4 md:grid-cols-3">
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg text-center">
                <svg class="w-12 h-12 text-purple-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
                <h3 class="text-xl text-purple-400 mb-2">Live Chat</h3>
                <p class="text-gray-300">Communicate with team members in real-time within the virtual world.</p>
            </div>
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg text-center">
                <svg class="w-12 h-12 text-purple-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                <h3 class="text-xl text-purple-400 mb-2">Video Meetings</h3>
                <p class="text-gray-300">Host virtual meetings with video and screen sharing.</p>
            </div>
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg text-center">
                <svg class="w-12 h-12 text-purple-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="text-xl text-purple-400 mb-2">Shared Workspaces</h3>
                <p class="text-gray-300">Collaborate on projects with shared 3D workspaces.</p>
            </div>
        </div>
    </section>

    <!-- Project Showcase -->
    <section class="py-12">
        <h2 class="text-3xl font-semibold text-purple-400 mb-6">Featured Projects</h2>
        <div class="grid gap-4 md:grid-cols-3">
            {% for project in featured_projects %}
                <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
                    <img src="{{ asset('build/images/' ~ project.image) }}" alt="{{ project.title }}" class="w-full h-40 object-cover rounded-lg mb-4">
                    <h3 class="text-xl text-purple-400 mb-2">{{ project.title }}</h3>
                    <p class="text-gray-300 mb-4">{{ project.description|truncate(100) }}</p>
                    <a href="{{ path('virtual_world_project', {'id': project.id}) }}" class="text-purple-400 hover:underline">View in Kodoverse</a>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
