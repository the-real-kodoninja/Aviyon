{% extends 'base.html.twig' %}
{% block body %}
  <div class="hero">
    <!-- Three.js Background -->
    <div id="three-canvas" class="absolute inset-0 z-0"></div>

    <!-- Content -->
    <div class="text-center relative z-10 px-4">
      <!-- Logo/Title -->
      <h1 class="mb-6">Aviyon</h1>

      <!-- Tagline with Typing Animation -->
      <p class="tagline text-lg md:text-xl mb-8 animate-typewriter">
        Web3 Cloud Platform for DeFi & ICP
      </p>

      <!-- Features List -->
      <ul class="max-w-md mx-auto mb-8 text-left">
        <li class="feature-item">Cloud IDE: Browser-based coding with real-time collaboration</li>
        <li class="feature-item">Deployment Engine: Automated CI/CD pipelines</li>
        <li class="feature-item">Hosting Service: Custom domains, databases, storage</li>
      </ul>

      <!-- CTA Buttons -->
      <div class="space-x-4">
        <a href="{{ path('login') }}" class="cta-button primary animate-pulse-slow">Login</a>
        <a href="{{ path('signup') }}" class="cta-button secondary">Join Now</a>
      </div>
    </div>
  </div>
{% endblock %}
