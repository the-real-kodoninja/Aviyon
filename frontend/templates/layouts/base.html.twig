<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Aviyon{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('build/base.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <header class="header">
        <nav>
            <ul>
                <li><a href="{{ path('app_root') }}">Home</a></li>
                <li><a href="{{ path('marketplace') }}">Marketplace</a></li>
                <li><a href="{{ path('explore') }}">Explore</a></li>
                <li><a href="{{ path('about') }}">About</a></li>
                <li><a href="{{ path('ide') }}">IDE</a></li>
            </ul>
        </nav>
    </header>

    <main class="container">
        {% block body %}{% endblock %}
    </main>

    <footer class="footer">
        <ul>
            <li><a href="{{ path('about') }}">About</a></li>
            <li><a href="/privacy">Privacy</a></li>
            <li><a href="/terms">Terms</a></li>
        </ul>
    </footer>

    <!-- Chat Toggle Button -->
    <button id="chat-toggle" class="fixed bottom-4 right-4 btn bg-accent">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
        </svg>
    </button>

    <!-- Nimbus Popup -->
    {% include 'components/nimbus_popup.html.twig' %}

    <script src="{{ asset('build/app.js') }}"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
