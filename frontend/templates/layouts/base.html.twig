<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Aviyon{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('build/base.css') }}">
    <script src="{{ asset('build/app.js') }}" defer></script>
    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-dark text-gray-300 font-inter">
    <!-- Header -->
    {% include 'components/header.html.twig' %}

    <!-- Main Layout -->
    <div class="flex">
        {% if app.request.pathinfo starts with '/dashboard' %}
            <!-- Sidebar -->
            {% include 'components/sidebar.html.twig' %}
        {% endif %}

        <!-- Main Content -->
        <main class="{% if app.request.pathinfo starts with '/dashboard' %}ml-64{% endif %} flex-1">
            {% block body %}{% endblock %}
        </main>
    </div>

    <!-- Footer -->
    {% include 'components/footer.html.twig' %}

    <!-- Nimbus Popup -->
    {% include 'components/nimbus_popup.html.twig' %}

    {% block javascripts %}{% endblock %}
</body>
</html>
