<!DOCTYPE html>
<html>
<head>
    <title>Aviyon - Web3 Cloud Platform</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Roboto+Mono:wght@400;500&display=swap" rel="stylesheet">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}?v={{ "now"|date("U") }}
    {% endblock %}
</head>
<body class="bg-dark text-light flex">
    <!-- Sidebar -->
    {% include 'components/sidebar.html.twig' %}

    <div class="flex-1 flex flex-col min-h-screen">
        <!-- Header -->
        {% include 'components/header.html.twig' %}

        <!-- Flash Messages -->
        <div class="pt-16">
            {% for message in app.flashes('success') %}
                <div class="flash-message">
                    {{ message }}
                </div>
            {% endfor %}
        </div>

        <!-- Main Content -->
        <main class="flex-1">
            {% block body %}{% endblock %}
        </main>

        <!-- Footer -->
        {% include 'components/footer.html.twig' %}
    </div>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}?v={{ "now"|date("U") }}
    {% endblock %}
</body>
</html>
