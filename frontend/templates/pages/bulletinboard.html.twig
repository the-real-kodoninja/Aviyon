{% extends 'layouts/base.html.twig' %}

{% block title %}Bulletin Board - Aviyon{% endblock %}

{% block body %}
    <section class="py-16 max-w-[1280px] mx-auto px-4">
        <h1 class="text-4xl font-bold text-[var(--purple-accent)] mb-4 neon-glow">Aviyon Bulletin Board</h1>
        <p class="text-gray-300 mb-6">Post announcements, events, or community updates with flair!</p>
        {% include 'components/bulletinboard/bulletinboard_new.html.twig' %}
        <div class="space-y-6 mt-6">
            <div class="bg-[var(--dark-bg)] p-6 rounded-lg shadow-lg hover:shadow-xl transition neon-glow">
                <div class="flex items-center mb-4">
                    <img src="{{ asset('build/images/users/community.jpg') }}" alt="User Photo" class="w-10 h-10 rounded-full mr-3">
                    <div>
                        <p class="text-sm text-[var(--purple-accent)]">Kodoverse Community</p>
                        <p class="text-xs text-gray-400">1 day ago</p>
                    </div>
                </div>
                <h3 class="text-xl text-purple-400 mb-2">Grand Opening Event!</h3>
                <p class="text-gray-300 mb-4">Join us for the grand opening of the Aviyon Marketplace on May 15, 2025. Free NFTs for the first 100 attendees!</p>
                <video controls class="w-full h-48 object-cover rounded-lg mb-4">
                    <source src="{{ asset('build/videos/event.mp4') }}" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>
    </section>
    <script src="{{ asset('build/js/components/bulletinboard/bulletinboard_new.js') }}"></script>
{% endblock %}
