{% extends 'layouts/base.html.twig' %}

{% block title %}Careers - Aviyon{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-inter font-bold text-neon-purple">Careers at Aviyon</h1>
        <div class="relative">
            <input type="text" id="job-filter" placeholder="Filter jobs..." class="p-3 bg-dark-light rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-neon-purple">
            <svg class="absolute right-3 top-3 w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
        </div>
    </div>

    <!-- Job Listings -->
    <div id="job-listings" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        {% for job in jobs|default([]) %}
            <div class="job-card bg-dark-light p-6 rounded-lg shadow-lg hover:shadow-neon-purple/50 transition-all duration-300">
                <h3 class="text-xl font-inter text-neon-purple">{{ job.title|default('Job Title') }}</h3>
                <p class="text-gray-400">{{ job.department|default('Department') }}</p>
                <p class="text-gray-400">{{ job.location|default('Location') }}</p>
                <p class="text-gray-400 mt-2">{{ job.description|default('No description available.') }}</p>
                <a href="{{ path('careers_apply') }}" class="mt-4 inline-block bg-neon-purple text-white px-4 py-2 rounded-lg hover:bg-neon-purple/80 transition font-inter">Apply Now</a>
            </div>
        {% else %}
            <p class="text-gray-400 col-span-full">No job openings available at the moment.</p>
        {% endfor %}
    </div>

    <!-- Application Form -->
    <div class="bg-dark-light p-8 rounded-lg shadow-lg">
        <h2 class="text-2xl font-inter text-neon-purple mb-4">Apply for a Position</h2>
        <form action="{{ path('careers_apply') }}" method="POST" class="space-y-4">
            <div>
                <label for="name" class="block text-gray-300 font-inter">Full Name</label>
                <input type="text" id="name" name="name" class="w-full p-3 bg-dark rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-neon-purple" required>
            </div>
            <div>
                <label for="email" class="block text-gray-300 font-inter">Email</label>
                <input type="email" id="email" name="email" class="w-full p-3 bg-dark rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-neon-purple" required>
            </div>
            <div>
                <label for="position" class="block text-gray-300 font-inter">Position</label>
                <input type="text" id="position" name="position" class="w-full p-3 bg-dark rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-neon-purple" required>
            </div>
            <div>
                <label for="resume" class="block text-gray-300 font-inter">Resume (URL or Text)</label>
                <textarea id="resume" name="resume" class="w-full p-3 bg-dark rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-neon-purple" required></textarea>
            </div>
            <button type="submit" class="bg-neon-purple text-white px-6 py-3 rounded-lg hover:bg-neon-purple/80 transition font-inter">Submit Application</button>
        </form>
    </div>
</div>

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const filterInput = document.getElementById('job-filter');
            const jobListings = document.getElementById('job-listings');
            filterInput.addEventListener('input', () => {
                const filter = filterInput.value.toLowerCase();
                const jobs = jobListings.querySelectorAll('.job-card');
                jobs.forEach(job => {
                    const text = job.textContent.toLowerCase();
                    job.style.display = text.includes(filter) ? '' : 'none';
                });
            });
        }); // Added missing closing for DOMContentLoaded
    </script>
{% endblock %}
{% endblock %}
