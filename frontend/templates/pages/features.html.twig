{% extends 'layouts/base.html.twig' %}

{% block title %}Aviyon - Features{% endblock %}

{% block body %}
    <!-- Features Header -->
    <section class="py-12">
        <h1 class="text-4xl font-bold text-purple-400 mb-4 text-center">Explore Kodoverse Features</h1>
        <p class="text-xl text-gray-300 mb-8 text-center">Discover the tools that make Aviyon the ultimate Web3 platform for creators and developers.</p>
    </section>

    <!-- Features Grid -->
    <section class="py-12">
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <!-- Decentralized Hosting -->
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg text-center">
                <svg class="w-12 h-12 text-purple-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0-6C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"></path>
                </svg>
                <h3 class="text-xl text-purple-400 mb-2">Decentralized Hosting</h3>
                <p class="text-gray-300">Host your DApps securely on the Internet Computer with 99.9% uptime and scalable resources.</p>
            </div>
            <!-- AI-Powered Tools -->
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg text-center">
                <svg class="w-12 h-12 text-purple-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2V9"></path>
                </svg>
                <h3 class="text-xl text-purple-400 mb-2">AI-Powered Tools</h3>
                <p class="text-gray-300">Leverage Nimbus AI for code suggestions, smart contract generation, and advanced analytics.</p>
            </div>
            <!-- NFT Marketplace -->
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg text-center">
                <svg class="w-12 h-12 text-purple-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a2 2 0 00-2-2h-3m-2-2H7a2 2 0 01-2-2V5a2 2 0 012-2h10a2 2 0 012 2v9a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="text-xl text-purple-400 mb-2">NFT Marketplace</h3>
                <p class="text-gray-300">Create, buy, and sell NFTs in our vibrant marketplace with low transaction fees.</p>
            </div>
            <!-- Virtual World -->
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg text-center">
                <svg class="w-12 h-12 text-purple-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.9 2.166A4.002 4.002 0 003 15z"></path>
                </svg>
                <h3 class="text-xl text-purple-400 mb-2">Kodoverse Virtual World</h3>
                <p class="text-gray-300">Collaborate and showcase projects in an immersive 3D environment with live chat and video meetings.</p>
            </div>
            <!-- Social Feed -->
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg text-center">
                <svg class="w-12 h-12 text-purple-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m-2-1V4a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="text-xl text-purple-400 mb-2">Social Feed</h3>
                <p class="text-gray-300">Connect with creators, share updates, and engage with the community through a real-time social feed.</p>
            </div>
            <!-- Fitness Tracking -->
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg text-center">
                <svg class="w-12 h-12 text-purple-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                <h3 class="text-xl text-purple-400 mb-2">KodoFitness Tracking</h3>
                <p class="text-gray-300">Sync steps, track calories, and get personalized workout plans with Nimbus AI integration.</p>
            </div>
            <!-- NP++ IDE -->
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg text-center">
                <svg class="w-12 h-12 text-purple-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
                <h3 class="text-xl text-purple-400 mb-2">Nimbuspad++ IDE</h3>
                <p class="text-gray-300">Code efficiently with our integrated IDE, featuring syntax highlighting and AI assistance.</p>
            </div>
            <!-- Inventory Management -->
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg text-center">
                <svg class="w-12 h-12 text-purple-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                </svg>
                <h3 class="text-xl text-purple-400 mb-2">Inventory Management</h3>
                <p class="text-gray-300">Track and manage inventory with SVG maps, QR code scanning, and real-time updates.</p>
            </div>
            <!-- DeFi Tools -->
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg text-center">
                <svg class="w-12 h-12 text-purple-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0-6C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"></path>
                </svg>
                <h3 class="text-xl text-purple-400 mb-2">DeFi Tools</h3>
                <p class="text-gray-300">Access decentralized finance tools for staking, lending, and yield farming within the platform.</p>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-12 text-center">
        <h2 class="text-3xl font-bold text-purple-400 mb-4">Ready to Build in the Kodoverse?</h2>
        <a href="{{ path('signup') }}" class="inline-block bg-purple-500 text-white px-8 py-3 rounded-lg hover:bg-purple-600 transition text-lg">Get Started</a>
    </section>
{% endblock %}
