{% extends 'layouts/base.html.twig' %}

{% block title %}Investing - Kodoverse Hub{% endblock %}

{% block body %}
<div class="relative investing-dashboard">
    <!-- Background Canvas for 3D Visualization -->
    <canvas id="investing-canvas" class="absolute inset-0 w-full h-full z-0 opacity-30"></canvas>

    <!-- Main Container -->
    <div class="container mx-auto px-4 py-8">
        <!-- Header Section -->
        {% include 'components/investing/header.html.twig' %}

        <!-- Navigation Tabs -->
        {% include 'components/investing/nav.html.twig' %}

        <!-- Main Content Sections -->
        <div class="content-sections space-y-12">
            <section id="portfolio" class="section">
                {% include 'components/investing/portfolio.html.twig' %}
            </section>

            <section id="trading" class="section">
                {% include 'components/investing/trading.html.twig' %}
            </section>

            <section id="market-insights" class="section">
                {% include 'components/investing/market_insights.html.twig' %}
            </section>

            <section id="virtual-simulator" class="section">
                {% include 'components/investing/virtual_simulator.html.twig' %}
            </section>

            <section id="staking-pools" class="section">
                {% include 'components/investing/staking_pools.html.twig' %}
            </section>

            <section id="investors" class="section">
                {% include 'components/investing/investors.html.twig' %}
            </section>

            <section id="kodoverse-lore" class="section">
                {% include 'components/investing/kodoverse_lore.html.twig' %}
            </section>

            <section id="social-trading" class="section">
                {% include 'components/investing/social_trading.html.twig' %}
            </section>

            <section id="company-feed" class="section">
                {% include 'components/investing/company_feed.html.twig' %}
            </section>

            <section id="blog" class="section">
                {% include 'components/investing/blog.html.twig' %}
            </section>

            <section id="earnings" class="section">
                {% include 'components/investing/earnings.html.twig' %}
            </section>

            <section id="spending" class="section">
                {% include 'components/investing/spending.html.twig' %}
            </section>
        </div>
    </div>
</div>

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/three@0.128.0/build/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="{{ asset('build/investing.js') }}"></script>
{% endblock %}
{% endblock %}
