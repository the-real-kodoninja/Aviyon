{% extends 'layouts/base.html.twig' %}

{% block title %}Aviyon - Welcome to the Kodoverse{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="text-center py-16 bg-gradient-to-b from-gray-800 to-gray-900">
        <h1 class="text-5xl font-bold text-purple-400 mb-4">Welcome to Aviyon</h1>
        <p class="text-xl text-gray-300 mb-8">The Kodoverse: Where DeFi Meets Cloud Computing and Social Innovation</p>
        <div class="flex justify-center space-x-4">
            <a href="{{ path('explore') }}" class="bg-purple-500 text-white px-6 py-3 rounded-lg hover:bg-purple-600 transition">Explore Now</a>
            <a href="{{ path('platform', {'platformName': 'kodoninja'}) }}" class="bg-gray-700 text-gray-100 px-6 py-3 rounded-lg hover:bg-gray-600 transition">Visit KodoNinja</a>
        </div>
    </section>

    <!-- Platform Overview -->
    <section class="py-16 text-center">
        <h2 class="text-4xl font-bold text-gray-100 mb-4">Aviyon Platform</h2>
        <p class="text-xl text-gray-300 mb-8">Scalable DeFi and Cloud Computing Infrastructure for the Kodoverse</p>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 py-12">
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:shadow-xl transition">
                <h3 class="text-2xl text-purple-400 mb-4">Decentralized Computing</h3>
                <p class="text-gray-300">Run your applications on a decentralized network with high availability and security.</p>
            </div>
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:shadow-xl transition">
                <h3 class="text-2xl text-purple-400 mb-4">DeFi Integration</h3>
                <p class="text-gray-300">Seamlessly integrate with DeFi protocols using AVY tokens for transactions and rewards.</p>
            </div>
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:shadow-xl transition">
                <h3 class="text-2xl text-purple-400 mb-4">Cloud IDE</h3>
                <p class="text-gray-300">Code, deploy, and manage your projects directly in the browser with our integrated IDE.</p>
            </div>
        </div>
        <div class="text-center">
            <a href="{{ path('dashboard') }}" class="bg-purple-500 text-white px-6 py-3 rounded-lg hover:bg-purple-600 transition">Get Started</a>
        </div>
    </section>

    <!-- Global Feed -->
    <section class="py-12">
        <h2 class="text-3xl font-semibold text-gray-100 mb-6">Global Feed</h2>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% set global_posts = [
                {'author': 'kodoninja', 'timestamp': '2025-04-29 10:00:00'|date, 'content': 'Just launched a new DeFi project!', 'image': 'post1.jpg', 'likes': 42, 'comments': ['Great work!', 'Excited to try this!']},
                {'author': 'kodonomad', 'timestamp': '2025-04-29 09:30:00'|date, 'content': 'Exploring the Kodoverse today.', 'image': null, 'likes': 15, 'comments': ['Looks amazing!']}
            ] %}
            {% for post in global_posts %}
                <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:shadow-xl transition">
                    <div class="flex items-center mb-4">
                        {% if post.author == 'kodoninja' %}
                            <img src="{{ asset('build/images/kodoninja-profile.jpg') }}" alt="User Avatar" class="w-10 h-10 rounded-full mr-3">
                        {% elseif post.author == 'kodonomad' %}
                            <img src="{{ asset('build/images/kodonomad-profile.jpg') }}" alt="User Avatar" class="w-10 h-10 rounded-full mr-3">
                        {% else %}
                            <img src="{{ asset('build/images/user-placeholder.jpg') }}" alt="User Avatar" class="w-10 h-10 rounded-full mr-3">
                        {% endif %}
                        <div>
                            <p class="text-gray-300 font-semibold">{{ post.author }}</p>
                            <p class="text-gray-500 text-sm">{{ post.timestamp|date('g:i A, M d, Y') }}</p>
                        </div>
                    </div>
                    <h3 class="text-xl text-purple-400 mb-2">{{ post.content }}</h3>
                    {% if post.image %}
                        <img src="{{ asset('build/images/' ~ post.image) }}" alt="Post Image" class="w-full h-48 object-cover rounded-lg mb-4">
                    {% endif %}
                    <div class="flex space-x-3">
                        <button class="text-gray-400 hover:text-purple-400">üëç {{ post.likes }}</button>
                        <button class="text-gray-400 hover:text-purple-400">üí¨ {{ post.comments|length }}</button>
                        <button class="text-gray-400 hover:text-purple-400">üîó Share</button>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="text-center mt-8">
            <a href="{{ path('explore') }}" class="text-purple-400 hover:underline">Load More...</a>
        </div>
    </section>
{% endblock %}
