{% extends 'layouts/base.html.twig' %}

{% block title %}Aviyon - Search{% endblock %}

{% block body %}
    <!-- Search Header -->
    <section class="py-12">
        <h1 class="text-4xl font-bold text-purple-400 mb-4">Search the Kodoverse</h1>
        <p class="text-xl text-gray-300 mb-8">Find users, platforms, posts, NFTs, and more across the Kodoverse.</p>
    </section>

    <!-- Search Form (Enhanced) -->
    <section class="py-8">
        <form action="{{ path('search') }}" method="GET" class="bg-gray-800 p-6 rounded-lg shadow-lg">
            <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-4">
                <!-- Query Input -->
                <div class="col-span-2">
                    <input type="text" name="q" value="{{ query|default('') }}" class="w-full p-2 bg-gray-700 rounded text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="Search users, platforms, posts, NFTs, #hashtags, @mentions">
                </div>
                <!-- Type Filter -->
                <div>
                    <select name="type" class="w-full p-2 bg-gray-700 rounded text-gray-100 focus:outline-none focus:ring-2 focus:ring-purple-500">
                        <option value="">All Types</option>
                        <option value="user" {{ type == 'user' ? 'selected' }}>Users</option>
                        <option value="platform" {{ type == 'platform' ? 'selected' }}>Platforms</option>
                        <option value="post" {{ type == 'post' ? 'selected' }}>Posts</option>
                        <option value="nft" {{ type == 'nft' ? 'selected' }}>NFTs</option>
                        <option value="project" {{ type == 'project' ? 'selected' }}>Projects</option>
                    </select>
                </div>
                <!-- Date Range Filter -->
                <div>
                    <select name="date_range" class="w-full p-2 bg-gray-700 rounded text-gray-100 focus:outline-none focus:ring-2 focus:ring-purple-500">
                        <option value="">All Time</option>
                        <option value="24h" {{ date_range == '24h' ? 'selected' }}>Last 24 Hours</option>
                        <option value="7d" {{ date_range == '7d' ? 'selected' }}>Last 7 Days</option>
                        <option value="30d" {{ date_range == '30d' ? 'selected' }}>Last 30 Days</option>
                    </select>
                </div>
            </div>
            <div class="flex justify-between items-center mt-4">
                <div>
                    <label class="text-gray-300 mr-2">Sort by:</label>
                    <select name="sort" class="p-2 bg-gray-700 rounded text-gray-100 focus:outline-none focus:ring-2 focus:ring-purple-500">
                        <option value="relevance" {{ sort == 'relevance' ? 'selected' }}>Relevance</option>
                        <option value="newest" {{ sort == 'newest' ? 'selected' }}>Newest</option>
                        <option value="popularity" {{ sort == 'popularity' ? 'selected' }}>Popularity</option>
                    </select>
                </div>
                <button type="submit" class="bg-purple-500 text-white px-6 py-2 rounded-lg hover:bg-purple-600 transition">Search</button>
            </div>
        </form>
    </section>

    <!-- Search Results -->
    <section class="py-12">
        <h2 class="text-3xl font-semibold text-purple-400 mb-6">Results for "{{ query|default('All') }}"</h2>
        {% if results|length > 0 %}
            <div class="space-y-4">
                {% for result in results %}
                    <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
                        <p class="text-gray-300 capitalize mb-2">{{ result.type }}</p>
                        {% if result.type == 'user' %}
                            <div class="flex items-center space-x-3">
                                <img src="{{ asset('build/images/user-placeholder.jpg') }}" alt="{{ result.name }}" class="w-10 h-10 rounded-full">
                                <div>
                                    <a href="{{ result.url }}" class="text-purple-400 font-semibold hover:underline">{{ result.name }}</a>
                                    <p class="text-gray-400 text-sm">{{ result.bio|default('No bio available') }}</p>
                                </div>
                            </div>
                        {% elseif result.type == 'platform' %}
                            <div class="flex items-center space-x-3">
                                <img src="{{ asset('build/images/' ~ result.name ~ '-profile.jpg') }}" alt="{{ result.name }}" class="w-10 h-10 rounded-full">
                                <div>
                                    <a href="{{ result.url }}" class="text-purple-400 font-semibold hover:underline">{{ result.name }}</a>
                                    <p class="text-gray-400 text-sm">{{ result.description|default('No description available') }}</p>
                                </div>
                            </div>
                        {% elseif result.type == 'post' %}
                            <p class="text-gray-300 mb-2">{{ result.content|replace({'#': '<a href="' ~ path('search', {'q': '#\\1'}) ~ '" class="text-purple-400">#'})|replace({'@': '<a href="' ~ path('user_profile', {'username': '\\1'}) ~ '" class="text-purple-400">@'})|raw }}</p>
                            <a href="{{ result.url }}" class="text-purple-400 hover:underline">View Post</a>
                        {% elseif result.type == 'nft' %}
                            <div class="flex items-center space-x-3">
                                <img src="{{ asset('build/images/' ~ result.image) }}" alt="{{ result.name }}" class="w-16 h-16 rounded-lg">
                                <div>
                                    <p class="text-gray-300">{{ result.name }}</p>
                                    <a href="{{ result.url }}" class="text-purple-400 hover:underline">View on Marketplace</a>
                                </div>
                            </div>
                        {% elseif result.type == 'project' %}
                            <div>
                                <a href="{{ result.url }}" class="text-purple-400 font-semibold hover:underline">{{ result.name }}</a>
                                <p class="text-gray-400 text-sm">{{ result.description|default('No description available') }}</p>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
            <!-- Pagination -->
            <div class="flex justify-center mt-8 space-x-2">
                {% if current_page > 1 %}
                    <a href="{{ path('search', {'q': query, 'type': type, 'date_range': date_range, 'sort': sort, 'page': current_page - 1}) }}" class="bg-gray-700 text-gray-100 px-4 py-2 rounded-lg hover:bg-gray-600 transition">Previous</a>
                {% endif %}
                <span class="text-gray-300 px-4 py-2">Page {{ current_page }} of {{ total_pages }}</span>
                {% if current_page < total_pages %}
                    <a href="{{ path('search', {'q': query, 'type': type, 'date_range': date_range, 'sort': sort, 'page': current_page + 1}) }}" class="bg-gray-700 text-gray-100 px-4 py-2 rounded-lg hover:bg-gray-600 transition">Next</a>
                {% endif %}
            </div>
        {% else %}
            <p class="text-gray-300">No results found. Try adjusting your search query or filters.</p>
        {% endif %}
    </section>
{% endblock %}
