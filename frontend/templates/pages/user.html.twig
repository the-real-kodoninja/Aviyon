{% extends 'layouts/base.html.twig' %}

{% block body %}
<div class="container mx-auto p-6">
    <h1 class="text-4xl text-light mb-6">User Profile</h1>
    <div class="user-profile grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="profile-info p-4 bg-dark rounded">
            <img src="/build/user-placeholder.jpg" alt="User Avatar" class="w-32 h-32 rounded-full mx-auto mb-4">
            <h2 class="text-2xl text-light text-center">Username</h2>
            <p class="text-gray-400 text-center">user@example.com</p>
        </div>
        <div class="profile-details md:col-span-2 p-4 bg-dark rounded">
            <h2 class="text-2xl text-light mb-4">Activity</h2>
            <p class="text-gray-400">Purchased Domains: example.com, example.ai</p>
            <p class="text-gray-400">Hosting Plans: Basic Plan ($5.99/month)</p>
            <p class="text-gray-400">Recent Messages: 3 unread</p>
        </div>
    </div>
</div>
{% endblock %}
