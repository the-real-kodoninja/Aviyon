{% extends 'layouts/base.html.twig' %}

{% block title %}Aviyon - {{ user.username }}{% endblock %}

{% block body %}
    <section class="user-profile container py-12">
        <div class="profile-card flex items-center">
            <img src="{{ asset(user.avatar) }}" alt="{{ user.username }}" class="rounded-full w-24 h-24 mr-4">
            <div>
                <h1 class="text-3xl text-accent">{{ user.username }}</h1>
                <p class="text-secondary">{{ user.bio }}</p>
                <p class="text-secondary">Wallet: 0.8 ETH | 200 ICP</p>
                <p class="text-secondary">Followers: {{ user.followers|default(100) }} | Following: {{ user.following|default(50) }}</p>
                <button class="btn mt-2">Follow</button>
            </div>
        </div>

        <div class="tabs flex space-x-4 mb-4">
            <button class="btn tab-active" data-tab="posts">Posts</button>
            <button class="btn" data-tab="repos">Repos</button>
            <button class="btn" data-tab="nfts">NFTs</button>
            <button class="btn" data-tab="activity">Activity</button>
        </div>

        <div class="tab-content posts">
            {% for post in user.posts %}
                <div class="profile-card">
                    <div class="flex items-center">
                        <img src="{{ asset(user.avatar) }}" alt="{{ user.username }}" class="rounded-full w-12 h-12 mr-2">
                        <div>
                            <span class="text-accent font-semibold">{{ user.username }}</span>
                            <span class="text-secondary text-sm block">{{ post.timestamp|date('Y-m-d H:i') }}</span>
                        </div>
            </div>
            <p class="text-primary">{{ post.content|replace({'#': '<a href="' ~ path('search', {'q': '#\\1'}) ~ '" class="text-accent">#'})|replace({'@': '<a href="' ~ path('user_profile', {'username': '\\1'}) ~ '" class="text-accent">@'})|raw }}</p>
            <div class="flex space-x-4 mt-2">
                <form action="{{ path('like_post') }}" method="POST">
                    <input type="hidden" name="post_id" value="{{ loop.index }}">
                    <button type="submit" class="btn like-btn" data-post-id="{{ loop.index }}">Like (<span>{{ post.likes }}</span>)</button>
                </form>
                <button class="btn comment-toggle">Comment</button>
                <form action="{{ path('add_comment') }}" method="POST" class="comment-form flex-1 hidden">
                    <input type="hidden" name="post_id" value="{{ loop.index }}">
                    <textarea name="content" class="form-control" placeholder="Add a comment, use #hashtags or @mentions"></textarea>
                    <button type="submit" class="btn mt-2">Comment</button>
                </form>
            </div>
            {% for comment in post.comments %}
                <div class="ml-4 mt-2 text-secondary">
                    <span>{{ comment.author }}: {{ comment.content|replace({'#': '<a href="' ~ path('search', {'q': '#\\1'}) ~ '" class="text-accent">#'})|replace({'@': '<a href="' ~ path('user_profile', {'username': '\\1'}) ~ '" class="text-accent">@'})|raw }}</span>
                    <span class="block text-sm">{{ comment.timestamp|date('Y-m-d H:i') }}</span>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</div>

<div class="tab-content repos hidden">
    {% for repo in user.repos %}
        <div class="profile-card">
            <a href="{{ repo.url }}" class="text-accent font-semibold">{{ repo.name }}</a>
            <p class="text-secondary">Stars: {{ repo.stars }}</p>
            <button class="btn mt-2">Fork</button>
        </div>
    {% endfor %}
</div>

<div class="tab-content nfts hidden">
    {% for nft in user.nfts|default([{'id': 1, 'name': 'Cyberpunk Avatar #1'}]) %}
        <div class="profile-card">
            <canvas id="nft-{{ nft.id }}-preview" class="w-full h-48 mb-2"></canvas>
            <p class="text-primary">{{ nft.name }}</p>
            <a href="{{ path('marketplace') }}" class="btn">View on Marketplace</a>
        </div>
    {% endfor %}
</div>

<div class="tab-content activity hidden">
    <div class="profile-card">
        <p class="text-secondary">Deployed smart contract - {{ 'now'|date('Y-m-d H:i') }}</p>
        <p class="text-secondary">Commented on @kodoninja post - {{ 'yesterday'|date('Y-m-d H:i') }}</p>
    </div>
</div>
</section>

{% block javascripts %}
<script>
    document.querySelectorAll('.tabs .btn').forEach(button => {
        button.addEventListener('click', () => {
            document.querySelectorAll('.tabs .btn').forEach(btn => btn.classList.remove('tab-active'));
            button.classList.add('tab-active');
            document.querySelectorAll('.tab-content').forEach(content => content.classList.add('hidden'));
            document.querySelector(`.tab-content.${button.dataset.tab}`).classList.remove('hidden');
        });
    });
</script>
{% endblock %}
