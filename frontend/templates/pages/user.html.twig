{% extends 'layouts/base.html.twig' %}

{% block title %}{{ user.username }} - Aviyon{% endblock %}

{% block body %}
    <!-- Profile Header -->
    <section class="py-12">
        <div class="flex items-center space-x-6">
            <img src="{{ asset('build/images/users/' ~ user.username ~ '.png') }}" alt="{{ user.username }} Avatar" class="w-24 h-24 rounded-full border-2 border-purple-400">
            <div>
                <h1 class="text-3xl font-bold text-gray-100">{{ user.username }}</h1>
                <p class="text-gray-400">@{{ user.handle }}</p>
                <p class="text-gray-300 mt-2">{{ user.bio }}</p>
                <div class="flex space-x-4 mt-4">
                    <span class="text-gray-400">Projects: <span class="text-purple-400">{{ user.projects_count }}</span></span>
                    <span class="text-gray-400">Followers: <span class="text-purple-400">{{ user.followers_count }}</span></span>
                    <span class="text-gray-400">Following: <span class="text-purple-400">{{ user.following_count }}</span></span>
                </div>
            </div>
        </div>
        <div class="mt-6">
            <button class="bg-purple-500 text-white px-6 py-2 rounded-lg hover:bg-purple-600 transition">Follow</button>
        </div>
    </section>

    <!-- Tabs for Profile Sections -->
    <section class="border-t border-gray-700">
        <div class="flex space-x-6 text-gray-400 border-b border-gray-700">
            <button class="py-4 px-6 hover:text-purple-400 border-b-2 border-transparent hover:border-purple-400 transition" data-tab="projects">Projects</button>
            <button class="py-4 px-6 hover:text-purple-400 border-b-2 border-transparent hover:border-purple-400 transition" data-tab="activity">Activity</button>
            <button class="py-4 px-6 hover:text-purple-400 border-b-2 border-transparent hover:border-purple-400 transition" data-tab="nfts">NFTs</button>
        </div>
        <!-- Projects Tab -->
        <div id="projects" class="py-6 hidden">
            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                {% for project in user.projects %}
                    <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:shadow-xl transition">
                        <h3 class="text-xl text-purple-400 mb-2">{{ project.name }}</h3>
                        <p class="text-gray-300 mb-4">{{ project.description }}</p>
                        <div class="flex space-x-3">
                            <a href="{{ path('project_view', {'id': project.id}) }}" class="text-gray-400 hover:text-purple-400">View</a>
                            <span class="text-gray-400">Stars: {{ project.stars }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <!-- Activity Tab -->
        <div id="activity" class="py-6 hidden">
            <ul class="space-y-4">
                {% for activity in user.activities %}
                    <li class="bg-gray-800 p-4 rounded-lg">
                        <p class="text-gray-300">{{ activity.description }} <span class="text-gray-500 text-sm">{{ activity.time }}</span></p>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <!-- NFTs Tab -->
        <div id="nfts" class="py-6 hidden">
            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                {% for nft in user.nfts %}
                    <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:shadow-xl transition">
                        <img src="{{ asset('build/images/nfts/' ~ nft.id ~ '.png') }}" alt="{{ nft.name }}" class="w-full h-48 object-cover rounded-lg mb-4">
                        <h3 class="text-xl text-purple-400 mb-2">{{ nft.name }}</h3>
                        <p class="text-gray-300">Value: {{ nft.value }} AVY</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script>
        document.querySelectorAll('[data-tab]').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('[data-tab]').forEach(t => t.classList.remove('text-purple-400', 'border-purple-400'));
                tab.classList.add('text-purple-400', 'border-purple-400');
                document.querySelectorAll('#projects, #activity, #nfts').forEach(content => content.classList.add('hidden'));
                document.getElementById(tab.dataset.tab).classList.remove('hidden');
            });
        });
        document.querySelector('[data-tab="projects"]').click();
    </script>
{% endblock %}
